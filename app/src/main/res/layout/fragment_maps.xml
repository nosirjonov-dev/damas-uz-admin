<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MapsFragment">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_margin="20dp"
        android:id="@+id/btn_plus"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_plus"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintBottom_toTopOf="@id/tv_count"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_info_1"
        android:text="Chiqdi"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@id/btn_plus"
        app:layout_constraintRight_toRightOf="@id/btn_plus"
        app:layout_constraintLeft_toLeftOf="@id/btn_plus"/>
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="40sp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn_plus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_minus"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_info"
        app:layout_constraintTop_toBottomOf="@id/tv_count"
        android:text="Odam soni"
        app:layout_constraintRight_toRightOf="@id/tv_count"
        app:layout_constraintLeft_toLeftOf="@id/tv_count"/>
    <ImageView
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/btn_minus"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/tv_count"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_minus"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_info3"
        android:text="Tushdi"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/btn_minus"
        app:layout_constraintRight_toRightOf="@id/btn_minus"
        app:layout_constraintLeft_toLeftOf="@id/btn_minus"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/img_swipe_user"
        android:src="@drawable/ic_swipe_user_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHorizontal_bias="0.95"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/img_map_type"
        android:src="@drawable/ic_map_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHorizontal_bias="0.01"/>


</androidx.constraintlayout.widget.ConstraintLayout>